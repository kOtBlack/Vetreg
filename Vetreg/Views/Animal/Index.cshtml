@model IEnumerable<Vetreg.Models.Animal>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AddDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerId)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.Order">@Html.DisplayNameFor(model => model.Owner.Type)</a>
</th>
            <th>
                @Html.DisplayNameFor(model => model.RegionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KindId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BreedId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuitId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sticker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChipNumber)
            </th>
            <th>
                Age
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRetired)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AddDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kind.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Breed.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suit.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sticker)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChipNumber)
            </td>
            @*@{
                <td>
                    @String.Format("{0:f}", (float)((DateTime.Now - item.Birthday).TotalDays / 365.242199))
                </td>
            }*@
            @{
                DateTime age = DateTime.MinValue + (TimeSpan)(DateTime.Now - item.Birthday);
                @*string a = ($"{age.Year - 1},{age.Month - 1}");
                float.TryParse(a, out float fAge);
                        <td>
                            @fAge.ToString()
                        </td>*@
                <td >
                    @($"{age.Year - 1}.{age.Month - 1}")
                </td >
                }
                @if (item.Gender == 0)
                {
                    <td>
                        М
                    </td>
                }
                else
                {
                    <td>
                        Ж
                    </td>
                }
                    <td>
                        @Html.DisplayFor(modelItem => item.Remark)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsRetired)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.GUID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.GUID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.GUID">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
